        module purge
        module load r/4.3.0-gcc-13.2.0-withx-rmath-standalone-python-3.11.6
	module load r-mass/7.3-59-gcc-13.2.0-python-3.11.6
	module load plink/1.9-beta6.10-gcc-13.2.0
	module load plink2/2.00a5.10-gcc-13.2.0
    '''
}

