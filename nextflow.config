	counts = "path/to/gene_reads_whole_blood_v8.gct"
	lengths = "path/to/gene_lengths.txt"
	wgsfam = "path/to/GTEx_v8.maf1hwe.ALLinds.MT.fam"
        wgsbim = "path/to/GTEx_v8.maf1hwe.ALLinds.MT.bim"
